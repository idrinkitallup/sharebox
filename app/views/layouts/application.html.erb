<!DOCTYPE html>
<html>
  <head>
    <title>#Cloud | <%= content_for?(:title) ? yield(:title) : "fast-files" %></title> 
    <%= stylesheet_link_tag "application", "redmond/jquery-ui-1.8.17.custom" %> 
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
	
	<div class="header_wrapper">  
	    <div class="logo">  
	        <%= link_to "Hash::cloud", root_url %>  
	    </div>
	    <div id="login_user_status">  
		    <% if user_signed_in? %>  
		        <%= current_user.email  %>   
		        |  
		        <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>  
		    <% else %>  
		        <em>Not Signed in.</em>  
		        <%= link_to 'Sign in', new_user_session_path %>  
		        or  
		        <%= link_to 'Sign up', new_user_registration_path %>  
		    <% end %>  
		</div>  
	</div>
	
	
    <div id="container">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>


  </body>
</html>
